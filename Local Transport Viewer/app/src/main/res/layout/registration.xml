<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:padding="8dp"
			android:gravity="center_horizontal"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/title"
				android:layout_width="250dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="ONE STEP TO GET STARTED"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="#2196F3"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:translationY="10.0dp">
			<TextView
				android:id="@+id/name"
				android:layout_width="wrap_content"
				android:layout_height="50dp"
				android:padding="8dp"
				android:text="NAME"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FF6E40"/>
			<EditText
				android:id="@+id/name_value"
				android:layout_width="300dp"
				android:layout_height="45dp"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="Enter your name"
				android:textColorHint="#607D8B"
				android:translationX="-80.0dp"
				android:translationY="30.0dp"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:translationY="30.0dp">
			<TextView
				android:id="@+id/email"
				android:layout_width="wrap_content"
				android:layout_height="50dp"
				android:padding="8dp"
				android:text="EMAIL"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FF6E40"/>
			<EditText
				android:id="@+id/email_value"
				android:layout_width="300dp"
				android:layout_height="45dp"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="Enter your mail ID"
				android:textColorHint="#607D8B"
				android:translationX="-80.0dp"
				android:translationY="30.0dp"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:translationY="50.0dp">
			<TextView
				android:id="@+id/password"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="PASSWORD"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FF6E40"/>
			<EditText
				android:id="@+id/password_value"
				android:layout_width="300dp"
				android:layout_height="45dp"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"
				android:hint="Password"
				android:textColorHint="#607D8B"
				android:inputType="textPassword"
				android:translationX="-140.0dp"
				android:translationY="30.0dp"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear7"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:translationY="80.0dp">
			<TextView
				android:id="@+id/vehicle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="WHAT VEHICLE YOU HAVE"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FF6E40"/>
		</LinearLayout>
		<Button
			android:id="@+id/submit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#80D8FF"
			android:text="SUBMIT"
			android:textSize="25sp"
			android:textColor="#FFFFFF"
			android:translationY="100.0dp"
			android:layout_gravity="center_horizontal"/>
		<Spinner
			android:id="@+id/vehicles"
			android:layout_width="250dp"
			android:layout_height="45dp"
			android:padding="8dp"
			android:translationY="-20.0dp"
			android:spinnerMode="dropdown"
			android:layout_gravity="center_horizontal"/>
		<ImageView
			android:id="@+id/loading_bike"
			android:layout_width="100dp"
			android:layout_height="55dp"
			android:src="@drawable/loaading_bike_img"
			android:scaleType="center"
			android:translationX="125.0dp"
			android:translationY="90.0dp"/>
	</LinearLayout>
</LinearLayout>
