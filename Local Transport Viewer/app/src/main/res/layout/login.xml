<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/full_page_linear"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/loading_bike"
			android:layout_width="100dp"
			android:layout_height="55dp"
			android:src="@drawable/loaading_bike_img"
			android:scaleType="center"
			android:translationX="125.0dp"
			android:translationY="640.0dp"/>
		<LinearLayout
			android:id="@+id/heading_linear"
			android:layout_width="325dp"
			android:layout_height="100dp"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:translationX="-90.0dp"
			android:translationY="50.0dp">
			<TextView
				android:id="@+id/heading"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="ONT STEP TO LOGIN"
				android:textSize="30sp"
				android:textColor="#03A9F4"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/login_detail_linear"
			android:layout_width="325dp"
			android:layout_height="300dp"
			android:orientation="horizontal"
			android:translationX="-415.0dp"
			android:translationY="200.0dp">
			<LinearLayout
				android:id="@+id/password_linear"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:padding="8dp"
				android:orientation="horizontal"
				android:translationY="150.0dp">
				<TextView
					android:id="@+id/password_text"
					android:layout_width="wrap_content"
					android:layout_height="70dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="PASSWORD"
					android:textSize="30sp"
					android:textColor="#000000"/>
				<EditText
					android:id="@+id/password_value"
					android:layout_width="300dp"
					android:layout_height="70dp"
					android:padding="8dp"
					android:textSize="12sp"
					android:textColor="#000000"
					android:hint="Enter your password"
					android:textColorHint="#607D8B"
					android:inputType="textPassword"
					android:translationX="-175.0dp"
					android:translationY="40.0dp"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="325dp"
				android:layout_height="150dp"
				android:padding="8dp"
				android:orientation="horizontal"
				android:translationX="-325.0dp">
				<TextView
					android:id="@+id/mail_text"
					android:layout_width="wrap_content"
					android:layout_height="70dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="MAIL ID"
					android:textSize="30sp"
					android:textColor="#000000"/>
				<EditText
					android:id="@+id/mail_value"
					android:layout_width="300dp"
					android:layout_height="70dp"
					android:padding="8dp"
					android:textSize="12sp"
					android:textColor="#000000"
					android:hint="Enter your mail ID"
					android:textColorHint="#607D8B"
					android:translationX="-120.0dp"
					android:translationY="40.0dp"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/login_button_linear"
			android:layout_width="125dp"
			android:layout_height="50dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:translationX="-645.0dp"
			android:translationY="550.0dp">
			<Button
				android:id="@+id/login_button"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:background="#00B0FF"
				android:text="LOGIN"
				android:textSize="25sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
